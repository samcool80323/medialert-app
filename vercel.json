{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist/client"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/health",
      "dest": "/api/health.js"
    },
    {
      "src": "/api/scanner/start",
      "dest": "/api/scanner/start.js"
    },
    {
      "src": "/api/scanner/([^/]+)",
      "dest": "/api/scanner/[id].js?id=$1"
    },
    {
      "src": "/api/scanner/([^/]+)/pdf",
      "dest": "/api/scanner/[id]/pdf.js?id=$1"
    },
    {
      "src": "/api/ad-creator/check",
      "dest": "/api/ad-creator/check.js"
    },
    {
      "src": "/(.*)",
      "dest": "/dist/client/$1"
    }
  ],
  "functions": {
    "api/**/*.ts": {
      "maxDuration": 30
    }
  },
  "env": {
    "NODE_ENV": "production",
    "PUPPETEER_SKIP_CHROMIUM_DOWNLOAD": "true"
  }
}